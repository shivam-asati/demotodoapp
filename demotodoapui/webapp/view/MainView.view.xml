<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="demotodoappui.controller.MainView"
  xmlns:core="sap.ui.core">
  <Page title="To-Do Application">
    <content>
      <VBox class="sapUiSmallMargin">
        <HBox>
          <Input id="taskInput" placeholder="Enter a new task..." width="80%"/>
          <Button text="Add Task" press="onAddTask" width="20%"/>
        </HBox>
        <List id="taskList" items="{tasks>/taskList}">
          <CustomListItem>
            <HBox>
              <CheckBox selected="{tasks>completed}" select="onTaskComplete"/>
              <Text text="{tasks>task}" class="{= ${tasks>completed} ? 'completedTask' : ''}"/>
            </HBox>
          </CustomListItem>
        </List>
        <HBox>
          <Button text="Delete Selected" press="onDeleteTask" type="Reject"/>
          <Button text="Mark All Completed" press="onMarkAllCompleted" type="Accept"/>
        </HBox>
      </VBox>
    </content>
  </Page>
</mvc:View>