<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="demotodoappui.controller.MainView"
  xmlns:core="sap.ui.core">

  <VBox class="sapUiSmallMargin">
    <HBox>
      <Input id="taskInput" placeholder="Enter a new task..." width="80%" />
      <Button text="Add Task" press="onAddTask" width="20%" />
    </HBox>

    <List id="taskList" items="{tasks>/tasks}">
      <CustomListItem>
        <HBox justifyContent="SpaceBetween" alignItems="Center">
          <Text text="{tasks>title}" textDecoration="{= ${tasks>completed} ? 'LineThrough' : 'None'}" />
          <HBox>
            <Button icon="sap-icon://accept" press="onCompleteTask" type="Accept" />
            <Button icon="sap-icon://delete" press="onDeleteTask" type="Reject" />
          </HBox>
        </HBox>
      </CustomListItem>
    </List>
  </VBox>

</mvc:View>