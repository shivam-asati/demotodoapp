<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="demotodoappui.controller.MainView"
>
  <VBox class="sapUiSmallMargin">
    <Panel headerText="To-Do Application" class="sapUiResponsiveMargin" width="100%">
      <content>
        <HBox width="100%" justifyContent="SpaceBetween" alignItems="Center">
          <Input
            id="taskInput"
            placeholder="Enter a new task"
            width="80%"
          />
          <Button
            text="Add Task"
            press="onAddTask"
            type="Emphasized"
          />
        </HBox>
        <List
          id="taskList"
          items="{/tasks}"
          class="sapUiSmallMarginTop"
        >
          <CustomListItem>
            <HBox width="100%" alignItems="Center">
              <CheckBox
                selected="{completed}"
                select="onTaskComplete"
              />
              <Text text="{name}" class="sapUiSmallMarginBegin" />
              <Button
                icon="sap-icon://delete"
                type="Transparent"
                press="onDeleteTask"
                class="sapUiSmallMarginBegin"
              />
            </HBox>
          </CustomListItem>
        </List>
      </content>
    </Panel>
  </VBox>
</mvc:View>