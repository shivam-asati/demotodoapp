<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="demotodoappui.controller.MainView"
  xmlns:core="sap.ui.core">

  <Page title="Sales Order Dashboard">
    <content>
      <VBox class="sapUiSmallMargin">
        <Toolbar>
          <SearchField
            id="searchField"
            width="50%"
            placeholder="Search Sales Orders"
            search="onSearch" />
          <ToolbarSpacer />
          <Button text="Filter" press="onFilter" icon="sap-icon://filter" />
          <Button text="Sort" press="onSort" icon="sap-icon://sort" />
        </Toolbar>

        <Table id="salesOrderTable" items="{salesOrderModel>/SalesOrders}" inset="false">
          <columns>
            <Column><Text text="Order ID" /></Column>
            <Column><Text text="Customer Name" /></Column>
            <Column><Text text="Order Date" /></Column>
            <Column><Text text="Total Amount" /></Column>
            <Column><Text text="Order Status" /></Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Text text="{salesOrderModel>OrderID}" />
                <Text text="{salesOrderModel>CustomerName}" />
                <Text text="{salesOrderModel>OrderDate}" />
                <Text text="{salesOrderModel>TotalAmount}" />
                <Text text="{salesOrderModel>OrderStatus}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </VBox>
    </content>
  </Page>
</mvc:View>